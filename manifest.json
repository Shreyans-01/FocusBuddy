{
    "name": "Focus Buddy",
    "version": "1.2.4",
    "manifest_version": 2,
  
    "description": "This simple timer tells you when your time is up.",
    "icons": {
        "16": "focus_buddy_image.png",
        "32": "focus_buddy_image.png",
        "48": "focus_buddy_image.png",
        "128": "focus_buddy_image.png"
    },
  
    "background": {
      "scripts": ["background.js"]
    },
  
    "browser_action": {
      "default_icon": "focus_buddy_image.png",
      "default_popup": "popup.html"
    },
  
    "offline_enabled": true,
  
    "permissions": [
      "notifications"
    ],
  
    "web_accessible_resources": [
        "focus_buddy_image.png"
    ]
}

